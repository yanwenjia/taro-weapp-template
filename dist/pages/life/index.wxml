<block wx:if="{{$taroCompReady}}">
    <block wx:if="{{!weatherMsg || !dailyForecast}}">
        <view></view>
    </block>
    <view class="page-container" wx:else>
        <view class="weather-now">
            <view class="item">
                <view>{{address}}</view>
                <view>更新于:{{update.loc}}</view>
            </view>
            <view class="item">
                <view class="tmp">{{now.tmp}}°</view>
                <view class="cond_txt">{{now.cond_txt}}</view>
                <image class="icon" src="{{'http://jiayanwen.gitee.io/weathericon/' + now.cond_code + '.png'}}"></image>
            </view>
            <view class="item">
                <view>{{now.wind_dir}}{{now.wind_sc}}级</view>
                <view>相对湿度{{now.hum}}%</view>
            </view>
        </view>
        <day-item wx:key="date" wx:for="{{loopArray7}}" wx:for-item="item" wx:for-index="_anonIdx2" compid="{{item.$compid__7}}"></day-item>
    </view>
</block>